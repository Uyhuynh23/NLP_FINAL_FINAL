<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main"
    tools:context=".MainActivity">

    <!-- Decorative background elements -->
    <View
        android:id="@+id/bg_circle1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_glow_circle"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-60dp" />

    <View
        android:id="@+id/bg_circle2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_glow_accent"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-40dp"
        android:layout_marginStart="-50dp" />

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Animated mic icon -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_mic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_rawRes="@raw/mic_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vietnamese TTS"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Enter text to convert to speech"
            android:textSize="14sp"
            android:textColor="#B0B0B0" />

    </LinearLayout>

    <!-- Hidden fields for speaker ID and speed (keep for code compatibility) -->
    <EditText
        android:id="@+id/sid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/speed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- Main Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Input Section Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Your Text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Text Input Area -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F8F9FE">

                <EditText
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:hint="@string/text_hint"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:padding="16dp"
                    android:background="@null"
                    android:fontFamily="sans-serif" />

            </androidx.cardview.widget.CardView>

            <!-- Waveform Animation (visible when generating) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_waveform"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/waveform_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ready to generate"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:visibility="gone" />

            <!-- Button Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- Generate Button -->
                <Button
                    android:id="@+id/generate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âœ¨  Generate Speech"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_primary_gradient"
                    android:elevation="6dp"
                    android:stateListAnimator="@null" />

                <!-- Play & Stop Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/play"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_play"
                        android:elevation="4dp"
                        android:stateListAnimator="@null"
                        android:text="â–¶ï¸  Play"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/stop"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="â¹ï¸  Stop"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_danger_gradient"
                        android:elevation="4dp"
                        android:stateListAnimator="@null" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>